[colors]
background = #fa1e2137
foreground = #e3eaf3

primary = #e740ab
secondary = #65a2d9
tertiary = #d07ef2
fourth = #c740ab
alert = #ed404c

[bar/main]
width = 100%:-48
offset-x = 24
offset-y = 24

height = 36
radius = 0.0

override-redirect = true
wm-restack = i3

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 1
padding-right = 2
module-margin-left = 2
module-margin-right = 1

font-0 = SFMono:size=9:antialias=true;2
font-1 = SFMono:size=20:antialias=true;4

modules-left = i3
modules-center = xwindow
modules-right = spotify network_up cpu memory gpu audio date

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right

[module/spotify]
type = custom/script
exec = ~/.config/polybar/player.py -f '{title} by {artist}'
label = %{T2}%{F#1DB954}%{F-}%{T-} %output%
tail = true

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/network_up]
type = custom/script
exec = ~/.config/polybar/net_up.sh
tail = true
label = [ %output% ]

[module/gpu]
type = custom/script
exec = ~/.config/polybar/gpu.sh
interval = 1
label = %{T2}%{T-} %output%
label-foreground = ${colors.primary}

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = false
index-sort = true
enable-click = true
0enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

ws-icon-default = " "
ws-icon-1 = "1; "
ws-icon-2 = "2; "
ws-icon-3 = "3; "
ws-icon-4 = "4; "
ws-icon-5 = "5;5 "
ws-icon-6 = "6;6 "
ws-icon-7 = "7;7 "
ws-icon-8 = "8; "
ws-icon-9 = "9; "
ws-icon-0 = "0; "

format = <label-state>

label-focused-font = 2
label-focused = %icon%
label-focused-foreground = ${colors.fourth}
label-focused-padding = 1

label-unfocused = ${self.label-focused}
label-unfocused-foreground = #0a7383
label-unfocused-padding = ${self.label-focused-padding}
label-unfocused-font = 2

label-visible = ${self.label-focused}
label-visible-foreground = #0a7383
label-visible-padding = ${self.label-focused-padding}
label-visible-font = 2

label-urgent = ${self.label-focused}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-font = 2

[module/cpu]
type = internal/cpu
interval = 0.5
label = %{T2}%{T-} %percentage%%
label-foreground = ${colors.primary}

[module/memory]
type = internal/memory
label = %{T2}%{T-} %percentage_used%%
label-foreground = ${colors.primary}

[module/date]
type = internal/date
interval = 1

date = %m/%d %H:%M

format-prefix-foreground = ${colors.foreground}
format-underline = #0a6cf5

[module/audio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = VOL <label-volume>
label-muted = MUTED
label-muted-foreground = #666

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency =true

[global/wm]
margin-bottom = 20
